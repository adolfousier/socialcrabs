# ClawSocial Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# Server Configuration
PORT=3847
HOST=127.0.0.1
WS_PORT=3848

# Logging
LOG_LEVEL=info
LOG_FILE=logs/clawsocial.log

# Browser Configuration
BROWSER_HEADLESS=true
BROWSER_DATA_DIR=./browser-data
BROWSER_TIMEOUT=30000

# Rate Limiting (actions per day)
RATE_LIMIT_INSTAGRAM_LIKE=100
RATE_LIMIT_INSTAGRAM_COMMENT=30
RATE_LIMIT_INSTAGRAM_FOLLOW=50
RATE_LIMIT_INSTAGRAM_DM=50
RATE_LIMIT_TWITTER_LIKE=100
RATE_LIMIT_TWITTER_TWEET=10
RATE_LIMIT_TWITTER_FOLLOW=50
RATE_LIMIT_LINKEDIN_CONNECT=15
RATE_LIMIT_LINKEDIN_MESSAGE=40

# Human-like Behavior
DELAY_MIN_MS=1500
DELAY_MAX_MS=4000
TYPING_SPEED_MIN_MS=30
TYPING_SPEED_MAX_MS=100

# Session Management
SESSION_DIR=./sessions
COOKIE_ENCRYPTION_KEY=your-32-character-encryption-key

# API Authentication (optional, for remote access)
API_KEY=your-api-key-here
API_SECRET=your-api-secret-here
